# HackX Backend Environment Variables
# Copy this file to .env and update the values

# 数据库配置
DATABASE_URL="postgresql://hackx_user:your_secure_password@localhost:5432/hackx_platform"

# JWT配置
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-64-characters-long"

# IPFS配置 (二选一)
# 选项1: 使用JWT方式
PINATA_JWT="your-pinata-jwt-token"

# 选项2: 使用API Key方式
# PINATA_API_KEY="your-pinata-api-key"
# PINATA_API_SECRET="your-pinata-api-secret"

# IPFS网关配置
PINATA_GATEWAY="https://gateway.pinata.cloud"

# 区块链配置
PRIVATE_KEY="your-private-key-for-contract-interaction"
BSC_TESTNET_RPC_URL="https://data-seed-prebsc-1-s1.bnbchain.org:8545"

# 可选: 其他RPC URLs备用
MAINNET_RPC_URL="https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY"
POLYGON_RPC_URL="https://polygon-mainnet.alchemyapi.io/v2/YOUR_API_KEY"
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"
OPTIMISM_RPC_URL="https://mainnet.optimism.io"

# 邮件服务配置 (可选)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# Redis缓存配置 (可选)
REDIS_URL="redis://localhost:6379"

# Node环境
NODE_ENV="development"

# 安全配置
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# 文件上传限制
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"